@model Tirelires.Commande

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        @*<th>
          IdClient
        </th>*@
        <th>
           Produit
        </th>
        <th>
           Prix
        </th>
        <th></th>
        <th>
           Quantite
        </th>
        <th></th>
        <th>Montant</th>
        <th></th>
    </tr>

@foreach (var item in Model.DetailsCommandes) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.Commande.IdClient)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Produit.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Produit.Prix)
        </td>
        <td></td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantite)
        </td>
        <td>
            @Ajax.ActionLink("+", "Incrementer", new {IdProduit=item.IdProduit},
             new AjaxOptions {HttpMethod="POST"
             ,UpdateTargetId= ("tr"+item.IdProduit)
             ,InsertionMode=InsertionMode.Replace
             })
        </td>
        <td>@(item.Produit.Prix*item.Quantite)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
